<div class="container">
<div class="row">
    <%= render 'layouts/popular_recent_sidebar' %>
    <div class="col-md-8"> 
      
      <div class="panel">
        <div class="panel-body">
        <% @posts.each do |post| %>
          
          <!--/stories-->
          <div class="row">    
                <br>
                <div class="col-md-2 col-sm-3 text-center">
                  <% if post.user.present? && !post.user.avatar.nil? %>
                    <%= image_tag post.user.avatar.url , :class => 'img-circle'%>
                  <% end %>
                </div>
                <div class="col-md-10 col-sm-9">
                  <h3><%= post.title %></h3>
                  <div class="row">
                    <div class="col-xs-9">
                      <p><%= replace_smilies(post.body) %></p>
                      <p ><%= link_to 'Read More', post_path(post),class: "btn btn-default" %></p>
                      <p class="pull-right">
                        <% post.tag_list.each do |tag|%>
                         <span class="label label-default">
                          <%= tag %>
                         </span> &nbsp;
                        <% end %>
                        
                      </p>
                      <ul class="list-inline">
                        <li><%= time_ago_in_words(post.created_at) %></li>
                        <li><%= post.comments.count %> Comments</li>
                        <li><i class="fa fa-share"></i> <%= pluralize(post.votes_for,' Like') %></li>
                        <span id="post_like"></span>
                        
                      </ul>
                      </div>
                    
                  </div>
                  <br><br>
                </div>
          </div>
        <hr>
        <% end %>
        <%= will_paginate @posts %>
        </div>
        <%= link_to 'New Post', new_post_path %>
    </div>
    </div>

    </div>
    

         


