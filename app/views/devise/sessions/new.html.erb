<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<h1>Make yourself feel<br>
					good by sharing knowledge.</h1>
					<div class="row">
					<div class="col-md-6 col-md-offset-1">
						<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html =>{:class=>"form-horizontal pull-center", :role=>"form"}) do |f| %>
							  <div class="form-group"><%= f.label :email %><br />
							  <%= f.email_field :email, autofocus: true,:class=>"form-control" %></div>

							  <div class="form-group"><%= f.label :password %><br />
							    <%= f.password_field :password, autocomplete: "off",:class=>"form-control" %></div>

							  <% if devise_mapping.rememberable? -%>
							    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
							  <% end -%>

							  <div class="form-group"><%= f.submit "Sign in",class: 'btn btn-warning' %></div>
						<% end %>

						<%= render "devise/shared/links" %>
					</div>
					<div class="col-md-6">
					</div>
					</div>				
				</div><!-- /col-lg-6 -->
				<div class="col-lg-6">
					<img class="img-responsive" src="/assets/work.png" alt="">
				</div><!-- /col-lg-6 -->
				
			</div><!-- /row -->
		
