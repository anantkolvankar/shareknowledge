<div class="row">
  <div class="col-md-3"></div>
  <div class="col-lg-6 offset3">
    <div class="well bs-component ">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: 'form-horizontal') do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
          <legend>Sign Up</legend>
            <div class="form-group">

            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class: 'form-control' %>
          </div>
        
        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off",class: 'form-control' %>
        </div>

        <div class="form-group"><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control' %>
        </div>

        <div class="form-group">
           <div class="pull-left">
              <%= f.submit "Sign up",class: 'btn btn-primary pull-left' %></div>
           </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </fieldset>
  </div>  
  </div>
</div>