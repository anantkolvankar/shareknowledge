<%= modal_header title: "New Project" %>
<%= modal_body do %>
  <%= simple_form_for @project do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.hidden_field :user_id,value: current_user.id %>
    <%= modal_footer do %>
      <%= f.button :submit %>
    <% end %>
  <% end %>
<% end %>