<%= modal_header title: "New Note for #{@project.name}" %>
<%= modal_body do %>
  <%= simple_form_for @note do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.hidden_field :project_id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= modal_footer do %>
      <%= f.button :submit %>
    <% end %>
  <% end %>
<% end %>
